<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MercadoBitcoin.Views.SettingsPage"
             x:Name="OrdersPage"
             >
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Configurations API"  FontSize="20"  VerticalOptions="Center" Margin="10, 5, 0, 10"></Label>

            <Label Text="Public Key" VerticalOptions="Center"></Label>
            <Entry x:Name="PublicKey" VerticalOptions="Center" Margin="0, 5, 0, 10"></Entry>
            <Label Text="Private Key" VerticalOptions="Center"></Label>
            <Entry x:Name="PrivateKey" VerticalOptions="Center" Margin="0, 5, 0, 10"></Entry>

            <Button x:Name="Save" Text="Save" Margin="0, 20, 0, 0" VerticalOptions="Center" HorizontalOptions="Center" BorderWidth="1" Clicked="Save_Clicked" >
            </Button>

            <Button x:Name="Sair" Text="Exit" Margin="0, 20, 0, 0"  BorderWidth="1" Clicked="Sair_Clicked" VerticalOptions="Center" HorizontalOptions="Center">
            </Button>
            <Button Image="@drawable/trash" x:Name="Clear" Clicked="Clear_Clicked"  VerticalOptions="Center" HorizontalOptions="Center" >
            </Button>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>